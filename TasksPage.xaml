<Page x:Class="TuwenDayinDian.TasksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TuwenDayinDian"
      xmlns:compon="clr-namespace:TuwenDayinDian.Components"
      xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="1200"
      Title="TasksPage"
      FontSize="10"
      Background="White">

    <Grid>
        <!-- 设置两列布局 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300"
                              MaxWidth="380" />

        </Grid.ColumnDefinitions>

        <!-- 第一列内容 -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- 第一行内容 -->
            <Grid Grid.Row="0">
                <TextBlock Text="未知客户"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="10,5" />

                <Button Content="清空列表"
                        HorizontalAlignment="Right"
                        Margin="0,0,10,0"
                        Style="{StaticResource BootstrapButtonLink}"
                        x:Name="btnQingKong"
                        Click="btnQingKong_Click" />
            </Grid>

            <!-- Listview部分, 暂留，待详细设计 -->
            <compon:TaskListDataGrid HorizontalAlignment="Right"
                                     VerticalAlignment="Stretch"
                                     Grid.Row="1"
                                     Margin="0,20,0,0"
                                     MinWidth="800"></compon:TaskListDataGrid>
        </Grid>

        <!-- 第二列内容 -->
        <Grid Grid.Column="1" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="50*" />
                <RowDefinition Height="240" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <!-- 第一行内容 -->
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Image Source="/Images/logo2.png"
                           Width="50"
                           Height="50">
                        <Image.Clip>
                            <EllipseGeometry Center="25,25"
                                             RadiusX="25"
                                             RadiusY="25" />
                        </Image.Clip>
                    </Image>

                    <StackPanel Margin="10,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="图文联盟"
                                   FontSize="16"
                                   FontWeight="Bold" />
                        <TextBlock Text="白金会员" />
                    </StackPanel>
                </StackPanel>
                <Button HorizontalAlignment="Right"
                        Margin="0,0,10,0"
                        Height="40"
                        Width="40"
                        Background="Transparent"
                        Padding="0"
                        BorderThickness="0">
                    <Viewbox>
                        <Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                Width="30"
                                Height="30">
                            <Path Fill="DimGray"
                                  Data="M12 3C6.5 3 2 6.58 2 11C2.05 13.15 3.06 15.17 4.75 16.5C4.75 17.1 4.33 18.67 2 21C4.37 20.89 6.64 20 8.47 18.5C9.61 18.83 10.81 19 12 19C17.5 19 22 15.42 22 11S17.5 3 12 3M12 17C7.58 17 4 14.31 4 11S7.58 5 12 5 20 7.69 20 11 16.42 17 12 17M17 12V10H15V12H17M13 12V10H11V12H13M9 12V10H7V12H9Z" />

                        </Canvas>
                    </Viewbox>
                </Button>
            </Grid>

            <!-- 第二行内容 -->
            <Grid Grid.Row="1"
                  Margin="10,10,10,10">

                <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                    <TextBlock Text="批量操作"
                               HorizontalAlignment="Center"
                               FontSize="18"
                               Margin="0,5" VerticalAlignment="Top" />
                    <Button Content="设置打印参数"
                            Margin="4,5"
                            Style="{StaticResource BootstrapButtonYellow}"
                            Width="80"
                            Height="30"
                            HorizontalAlignment="Left"
                            Click="setPrintParam"                            
                            />
                    <WrapPanel HorizontalAlignment="Center"
                               Margin="0,5" Width="277"
                               >

                        <Button Content="批量操作"
                                Margin="2"
                                Style="{StaticResource BootstrapButtonYellow}"
                            Width="80"
                            Height="30" Click="Bulk_operation" />

                        <Button Content="插空白页"
                                Margin="2"
                                Style="{StaticResource BootstrapButtonYellow}"
                            Width="80"
                            Height="30" Click="Insert_Blankpage"/>
                        <!--<Button Content="列缩放至1页"
                                Margin="2"
                                Style="{StaticResource BootstrapButtonYellow}"
                            Width="80"
                            Height="30" />-->
                        <Button Content="转PDF"
                                Margin="2"
                                Style="{StaticResource BootstrapButtonYellow}"
                            Width="80"
                            Height="30" />
                        <Button Content="提取文件名"
                                Margin="2"
                                Style="{StaticResource BootstrapButtonYellow}"
                            Width="80"
                            Height="30" />
                        <Button Content="封面制作"
                                Margin="2"
                                Style="{StaticResource BootstrapButtonYellow}"
                            Width="80"
                            Height="30" Click="Make_Cover"/>
                        <Button Content="文件重命名"
                                Margin="2"
                                Style="{StaticResource BootstrapButtonYellow}"
                            Width="80"
                            Height="30" Click="fileopen" />
                    </WrapPanel>
                </StackPanel>
            </Grid>

            <!-- 第三行内容 -->
            <Border Grid.Row="2"
                    BorderBrush="Black"
                    BorderThickness="0"
                    Margin="10,30,10,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Padding="10"
                            Background="#f7f7f7"
                            CornerRadius="22,22,0,0"
                            BorderThickness="0">
                        <compon:PriceListDataGrid
                            BorderThickness="0"
                            MinWidth="280" Margin="2,0,0,0" Height="240" VerticalAlignment="Top" HorizontalAlignment="Left" Width="244"/>
                    </Border>
                    <Border Padding="14"
                            Grid.Row="1"
                            Background="#3f3f44"
                            CornerRadius="0,0,28,28"
                            BorderThickness="0">
                        <Grid>
                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Left">
                                <TextBlock Text="总价"
                                           Foreground="WhiteSmoke"></TextBlock>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="￥"
                                               FontSize="16"
                                               Foreground="WhiteSmoke"></TextBlock>
                                    <TextBlock Text="0.00"
                                               FontSize="18"
                                               Foreground="GreenYellow"
                                               x:Name="tbkZhongJia"></TextBlock>
                                </StackPanel>
                            </StackPanel>
                            <Button Content="计算价格"
                                    Margin="0"
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource BootstrapButtonYellow}"
                                    Width="126"
                                    Height="34"
                                    x:Name="btnJiSuanZhongJia"
                                    Click="btnJiSuanZhongJia_Click" />
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- 第四行内容 -->

            <Button Content="开始打印"
                    Width="120"
                    Grid.Row="3"
                    HorizontalAlignment="Right"
                    Style="{StaticResource BootstrapButtonYellow}" Margin="0,0,25,0" Click="Start_Print" Height="40" VerticalAlignment="Top" />
        </Grid>
    </Grid>

</Page>
