<Page x:Class="TuwenDayinDian.RemovePrint"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TuwenDayinDian"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RemovePrint">

    <Grid>
        <DataGrid x:Name="RemovePrintListView"
                  AutoGenerateColumns="False"
                  RowHeaderWidth="0"
                  ColumnHeaderHeight="30"
                  ColumnWidth="*"
                  Margin="0,0,0,0"
                  GridLinesVisibility="None"
                  BorderThickness="0"
                  FontSize="11"
                  FontWeight="Medium"
                  Background="White">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background"
                            Value="#f7f7f7" />
                    <Setter Property="Foreground"
                            Value="DarkGray" />

                    <Setter Property="VerticalContentAlignment"
                            Value="Center" />
                    <Setter Property="HorizontalContentAlignment"
                            Value="Center" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Height"
                            Value="35" />
                    <Setter Property="VerticalAlignment"
                            Value="Center" />
                    <Setter Property="HorizontalAlignment"
                            Value="Stretch" />

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          SnapsToDevicePixels="True">
                                    <ContentPresenter VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#cceabb" />
                            <Setter Property="Foreground" Value="Black" />
                            <Setter Property="BorderThickness" Value="0" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <!-- DataGrid Columns -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="序号"
                                    Binding="{Binding OrderId}" 
                                    Width="30">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 日期 -->
                <!--<DataGridTextColumn Header="日期"
                                    Binding="{Binding Date}"
                                    Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>-->

                <!-- 文件名称 -->
                <!--<DataGridTextColumn Header="文件名称"
                                    Binding="{Binding FileName}"
                                    MinWidth="240">
                            
                            
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment"
                                    Value="Center" />
                                    <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>-->

                <!-- 文件名称2 -->
                <DataGridTextColumn Header="文件名称"
                                    Binding="{Binding FileName}"
                                    Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Left" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>


                <DataGridTextColumn Header="下单时间"
                                    Binding="{Binding Date}"
                                    Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>


                <!-- 封皮类型 -->
                <DataGridTextColumn Header="封皮类型"
                                    Binding="{Binding CoverType}"
                                    Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>


                <!-- 装订方式 -->
                <DataGridTextColumn Header="装订方式"
                                    Binding="{Binding BindingStyle}"
                                    Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 份数 -->
                <DataGridTextColumn Header="份数"
                                    Binding="{Binding Copies}"
                                    Width="35">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="黑彩"
                                    Binding="{Binding ColorStyle}"
                                    Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>


                <DataGridTextColumn Header="正反打印"
                                    Binding="{Binding SinglePage}"
                                    Width="96">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="尺寸"
                                    Binding="{Binding A3Page}"
                                    Width="60">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <!-- 订单状态 -->
                <!--<DataGridTemplateColumn  Header="订单状态" Width="75">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox SelectedValue="{Binding Order_Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                              ItemsSource="{StaticResource OrderStatus}"
                                              SelectedIndex="0"
                                              FontSize="10"
                                              Width="80" 
                                              Style="{StaticResource MyCbbStyle}"/>

                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>-->




                <!-- 收货信息 -->
                <DataGridTextColumn Header="收货信息"
                                    Binding="{Binding ReceivingInfo}"
                                    MinWidth="90">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 收货信息 -->
                <DataGridTextColumn Header="状态"
                     Binding="{Binding OrderStatus}"
                     Width="40">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment"
                     Value="Center" />
                            <Setter Property="HorizontalAlignment"
                     Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <!-- 新增详情列 -->
                <!--<DataGridTemplateColumn Header="操作" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="详情" 
                        Click="DetailButton_Click"
                        CommandParameter="{Binding}"
                        Padding="5"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>-->

            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>                    
                    <MenuItem Header="下载文件" Click="DownloadAgain_Click"/>
                    <MenuItem Header="打印订单全部文件" Click="PrintOrderAgain_Click"/>
                    <MenuItem Header="打印单个文件" Click="PrintFileAgain_Click"/>
                    <MenuItem Header="跳转到文件夹" Click="ToFile_Click"/>
                    <MenuItem Header="打开文件" Click="OpenFile_Click"/>
                    <MenuItem Header="更换打印机" Click="ChangePrint_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
     
    </Grid>
</Page>
