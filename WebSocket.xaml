<Page x:Class="TuwenDayinDian.WebSocket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TuwenDayinDian"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WebSocket">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="WebSocket Server:" Margin="5"/>
        <TextBox x:Name="ServerTextBox" Grid.Row="0" Margin="80,5,5,5"/>
        <Button x:Name="ConnectButton" Grid.Row="0" Grid.Column="1" Content="Connect" Click="ConnectButton_Click" Margin="5" Width="70"/>
        <TextBlock x:Name="StatusTextBlock" Grid.Row="1" Margin="5"/>
        <TextBlock Text="Message:" Grid.Row="2" Margin="5"/>
        <TextBox x:Name="MessageTextBox" Grid.Row="2" Margin="80,5,5,5"/>
        <Button x:Name="SendButton" Grid.Row="2" Grid.Column="1" Content="Send" Click="SendButton_Click" Margin="5" Width="70" IsEnabled="False"/>
        <Button x:Name="ReceiveButton" Grid.Row="3" Grid.Column="2" Content="Receive" Click="ReceiveButton_Click" Margin="5" Width="70" IsEnabled="False"/>
        
    </Grid>
</Page>
